//Pergunta 1
let idioma = prompt("Escolha um Idioma Ingles,Portugues ou Espanhol:")
switch (idioma) {
    case "Portugues" :
    console.log("Ola!");
    break;
    case "Ingles" :
    console.log("Hello");
    break;
    case "Espanhol" :
    console.log("Hola");
    break;
    default:
    console.log("Idioma não encontrado.")
}

//Pergunta 2
let diaDaSemana= 2
let nomeDodia

switch(diaDaSemana){
    
    case 1:
    nomeDoDia="Domingo"
    break
    
    case 2:
    nomeDoDia="Segunda"
    break
    
    case 3:
    nomeDoDia="Terça"
    break
    
    case 4:
    nomeDoDia="Quarta"
    break
    
    case 5:
    nomeDoDia="Quinta"
    break
    
    case 6:
    nomeDoDia="Sexta"
    break
    
    case 7:
    nomeDoDia="Sabado"
    break
    default:
    
    nomDoDia= "Dia Inválido"
}

console.log("Hoje é " + nomeDoDia)

//Pergunta 3
let numeroTransporte = prompt("Digite um número para escolher o transporte (1 - carro, 2 - bicicleta, 3 - ônibus, 4 - trem, 5 - avião):");

switch (numeroTransporte) {
    case "1":
        console.log("Você escolheu: Carro");
        break;
    case "2":
        console.log("Você escolheu: Bicicleta");
        break;
    case "3":
        console.log("Você escolheu: Ônibus");
        break;
    case "4":
        console.log("Você escolheu: Trem");
        break;
    case "5":
        console.log("Você escolheu: Avião");
        break;
    default:
        console.log("Opção inválida. Digite um número de 1 a 5.");
        break;
}

//Pergunta 4
let nivelUrgencia = prompt("Digite o nível de urgência (1 - Baixa, 2 - Média, 3 - Alta):");

