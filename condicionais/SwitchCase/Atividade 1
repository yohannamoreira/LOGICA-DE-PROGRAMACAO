    case "1":
        console.log("Urgência: Baixa");
        break;
    case "2":
        console.log("Urgência: Média");
        break;
    case "3":
        console.log("Urgência: Alta");
        break;
    default:
        console.log("Valor inválido. Digite 1, 2 ou 3.");
        break;
}

