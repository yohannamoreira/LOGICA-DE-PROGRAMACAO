}

//Pergunta10
let categoriaIngresso = prompt("Digite a categoria do ingresso (estudante, meia, inteira):")

switch (categoriaIngresso.toLowerCase()) {
    case "estudante":
        console.log("Categoria Estudante: Preço do ingresso R$ 15,00")
        break
    case "meia":
        console.log("Categoria Meia Entrada: Preço do ingresso R$ 20,00")
        break
    case "inteira":
        console.log("Categoria Inteira: Preço do ingresso R$ 40,00")
        break
    default:
        console.log("Categoria inválida. Tente: estudante, meia ou inteira.")
        break
}

//Pergunta11
let faixaEtaria = prompt("Digite a faixa etária (infantil, adulto, idoso):")

switch (faixaEtaria.toLowerCase()) {
    case "infantil":
        console.log("Nível de dificuldade: Leve. Recomenda-se atividades lúdicas e recreativas.")
        break
    case "adulto":
        console.log("Nível de dificuldade: Moderado a intenso. Pode incluir musculação, corrida, HIIT.")
        break
    case "idoso":
        console.log("Nível de dificuldade: Leve a moderado. Indicado caminhadas, alongamentos e pilates.")
        break
    default:
        console.log("Faixa etária inválida. Tente: infantil, adulto ou idoso.")
        break
}

//Pergunta12
let generoMusical = prompt("Digite o gênero musical (rock, samba, clássico):")

switch (generoMusical.toLowerCase()) {
    case "rock":
        console.log("Instrumentos típicos do Rock: Guitarra elétrica, baixo, bateria.")
        break
    case "samba":
        console.log("Instrumentos típicos do Samba: Pandeiro, cavaquinho, surdo.")
        break
    case "clássico":
        console.log("Instrumentos típicos da Música Clássica: Violino, piano, violoncelo.")
        break
    default:
        console.log("Gênero musical inválido. Tente: rock, samba ou clássico.")
        break
}

//Pergunta13
let areaTecnologia = prompt("Digite a área de tecnologia (front-end, back-end, mobile):")

switch (areaTecnologia.toLowerCase()) {
    case "front-end":
        console.log("Cursos de Front-end disponíveis: HTML, CSS, JavaScript, React.")
        break
    case "back-end":
        console.log("Cursos de Back-end disponíveis: Node.js, Python, Java, Banco de Dados.")
        break
    case "mobile":
        console.log("Cursos de Mobile disponíveis: React Native, Flutter, Kotlin, Swift.")
        break
    default:
        console.log("Área inválida. Tente: front-end, back-end ou mobile.")
        break
}

//Pergunta14
let idadeAtleta = prompt("Digite a idade do atleta:")

if (idadeAtleta < 12) {
    console.log("Nível de habilidade: Iniciante - ideal para atividades recreativas e fundamentos do esporte.")
} else if (idadeAtleta >= 12 && idadeAtleta < 18) {
    console.log("Nível de habilidade: Intermediário - treinamento técnico e desenvolvimento físico.")
} else if (idadeAtleta >= 18 && idadeAtleta <= 35) {
    console.log("Nível de habilidade: Avançado - alta performance e competições.")
} else if (idadeAtleta > 35) {
    console.log("Nível de habilidade: Master - foco em condicionamento e bem-estar com técnicas adaptadas.")
} else {
    console.log("Idade inválida. Digite um número válido.")
}

//Pergunta15
let categoriaMatematica = prompt("Digite a categoria do desafio matemático (1 - Básico, 2 - Intermediário, 3 - Avançado):");

switch (categoriaMatematica) {
    case "1":
        console.log("Dificuldade: Básico. Operações simples como soma, subtração e multiplicação.");
        break;
    case "2":
        console.log("Dificuldade: Intermediário. Envolve frações, porcentagens e equações simples.");
        break;
    case "3":
        console.log("Dificuldade: Avançado. Inclui álgebra, funções, geometria e problemas complexos.");
        break;
    default:
        console.log("Categoria inválida. Digite 1, 2 ou 3.");
        break;
}